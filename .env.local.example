# S-Auth OAuth2
SAUTH_CLIENT_ID=your_client_id
SAUTH_CLIENT_SECRET=your_client_secret
SAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_SAUTH_CLIENT_ID=your_client_id

# Turso Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_auth_token

# Cloudflare R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=memories-photos
R2_PUBLIC_URL=https://your-bucket.r2.dev
NEXT_PUBLIC_R2_PUBLIC_URL=https://your-bucket.r2.dev

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_at_least_32_chars

# Mapbox (for city search and static images)
MAPBOX_ACCESS_TOKEN=your_mapbox_public_token
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_public_token
